@using ErkinStudy.Infrastructure.Services
@model IEnumerable<ErkinStudy.Domain.Entities.UbtHub.Specialty>
@inject SpecialtyService SpecialtyService
@{
    ViewData["Title"] = "Мамандықтар";
    var selectList = new SelectList(await SpecialtyService.GetAllSubjects(), "Id", "Title");
    var cities = await SpecialtyService.GetCities();
}
<div class="container mt-3">
    <div class="mx-auto text-center mt-3 mb-3">
        <h4>Мамандықтар</h4>
    </div>
    <div class="row">
        <aside class="col-sm-3">
        <form>
            <div class="card">
                <article class="card-group-item">
                    <header class="card-header">
                        <h6 class="title">Таңдау пәні</h6>
                    </header>
                    <div class="filter-content">
                        <div class="card-body">
                            <div class="mb-3">Бірінші пән:
                                <select class="form-select" name="firstSubject" asp-items="selectList">
                                    <option value="">Тандалмаған</option>
                                </select>
                            </div>
                            <div>
                                Екінші пән:
                                <select class="form-select" name="secondSubject" asp-items="selectList">
                                    <option value="">Тандалмаған</option>
                                </select>
                            </div>
                        </div> <!-- card-body.// -->
                    </div>
                </article> <!-- card-group-item.// -->

                <article class="card-group-item">
                    <header class="card-header">
                        <h6 class="title">Университеттер </h6>
                    </header>
                    <div class="filter-content">
                        <div class="card-body">
                            <ul class="list-group">
                                @foreach (var city in cities)
                                {
                                    <li class="list-group-item">
                                        <div data-toggle="collapse" data-target="#city_@city.Id">@city.Title</div>
                                        <div id="city_@city.Id" class="collapse">
                                            @foreach (var university in city.Universities)
                                            {
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                                    <label class="form-check-label" for="exampleCheck1">@university.ShortTitle</label>
                                                </div>
                                            }
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </article>
            </div>
        </form>
        </aside>
        <div class="col-md-8">
            <div class="list-group">
                @foreach (var item in  Model)
                {
                    <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@item.Title</h5>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
