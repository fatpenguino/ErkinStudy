@model IEnumerable<ErkinStudy.Domain.Entities.Payment.Order>

@{
    ViewData["Title"] = "Orders";
}
<div class="container">
    <div class="row">
        <h4 class="mt-3">Orders:</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        User
                    </th>
                    <th>
                        Folder
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Created Date
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.UserName)
                        </td>
                        <td>
                            @item.Folder.Id - @item.Folder.Name
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @item.CreatedDate
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderStatus)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { orderId = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a asp-controller="Admin" asp-action="Index">Admin Page</a>
        </div>
    </div>
</div>
