@{
    ViewData["Title"] = "Course Approve";
}
<br/>
<h4>Course Approve</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Approve">
            <div class="form-group">
                <label>Users:</label>
                <textarea class="form-control" name="userList" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label>Online Course</label>
                <select name="courseId" class ="form-control" asp-items="ViewBag.OnlineCourseId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Approve" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

