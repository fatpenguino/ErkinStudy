@model IEnumerable<UserRoleViewModel>

@{
    ViewData["Title"] = "Index";
}
<br/>
<h3>User Roles</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>User Email</th>
            <th>Role Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Username</td>
            <td>@item.UserEmail</td>
            <td>@item.RoleName</td>
            <td>
                @Html.ActionLink("Delete", "Delete", new {roleId = item.RoleId, userId = item.UserId})
            </td>
        </tr>
}
    </tbody>
</table>
