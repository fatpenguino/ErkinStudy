@using ErkinStudy.Web.Controllers.Admin;
@model IEnumerable<ErkinStudy.Domain.Entities.Lessons.UserLesson>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lesson)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lesson.Name)
            </td>
            <td>
                @Html.ActionLink("Delete", nameof(UserLessonController.Delete), new {  userId = item.UserId, lessonId = item.LessonId })
            </td>
        </tr>
}
    </tbody>
</table>
