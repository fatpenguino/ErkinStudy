@model ErkinStudy.Domain.Entities.Quiz.Answer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Answer</h4>
<hr />
<form asp-action="Edit" method="POST" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Content" class="col-form-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-check">      
            <input class="form-check-input" type="checkbox" asp-for="IsCorrect" />
            <label class="form-check-label" asp-for="IsCorrect"></label>
        </div>
    </div>    
    <div class="form-group">
        <input asp-for="Id" type="hidden"  />
        <input asp-for="QuestionId" type="hidden" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" asp-route-questionId="@Model.Question.Id">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
