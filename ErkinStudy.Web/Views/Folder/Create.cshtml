@model ErkinStudy.Domain.Entities.Lessons.Folder
@{
    ViewData["Title"] = "Create";
}
<h4 class="mt-3">Create Folder</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                @if (ViewBag.ParentId != null)
                {
                    <input asp-for="ParentId" type="hidden" value="@ViewBag.ParentId" />
                }
                else
                {
                    <div class="form-group">
                        <label>Parent</label>
                        <select asp-for="ParentId" class="form-control" asp-items="ViewBag.ParentList">
                            <option value="">No parent</option>
                        </select>
                    </div>
                }
                @if (ViewBag.TeacherId != null)
                {
                    <input asp-for="TeacherId" type="hidden" value="@ViewBag.TeacherId" />
                }
                else
                {
                    <div class="form-group">
                        <label>Teacher</label>
                        <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherList">
                            <option value="">No teacher</option>
                        </select>
                    </div>
                }

                <div class="form-group">
                    <label asp-for="Order"></label>
                    <input asp-for="Order" class="form-control" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        @if (ViewBag.ParentId != null)
        {
            <a asp-action="Manage" asp-route-id="@ViewBag.ParentId">Back to List</a>
        }
        else
        {
            <a asp-action="Index">Back to List</a>
        }
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
