@{
    ViewData["Title"] = "Home Page";
}
@using ErkinStudy.Domain.Models
@model IEnumerable<ErkinStudy.Domain.Models.Subject>
<div class="container">
		<div class="row">
			@foreach (var subject in Model)
			{
				<div class="list-group col-sm">
					<a href="#" class="list-group-item list-group-item-action active">@subject.Name</a>
					@foreach (var degree in subject.Degrees ?? new List<Degree>())
					{
						<a href="course/@degree.Id" class="list-group-item list-group-item-action">@degree.Level - @degree.Description</a>
					}
				</div>
			}
		</div>
</div>