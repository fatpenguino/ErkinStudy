@model ErkinStudy.Domain.Entities.OnlineCourse
@{
    ViewData["Title"] = "OnlineCourseSchedule";
}

<h1>Курс бағдарламасы</h1>
<div class="container">
    <div class="row">
        <div class="accordion" id="accordionCourse">
            @foreach (var week in Model.OnlineCourseWeeks)
            {
                <div class="card">
                    <div class="card-header" id="heading_@week.Id">
                        <h2 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse_@week.Id" aria-controls="collapse_@week.Id">
                                @week.Name
                            </button>
                        </h2>
                    </div>
                    <div id="collapse_@week.Id" class="collapse" aria-labelledby="collapse_@week.Id" data-parent="#accordionCourse">
                        <div class="card-body">
                            @week.Description
                            <div class="youtube-stream">
                                <iframe src="@week.StreamUrl" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>