@model ErkinStudy.Domain.Entities.Quizzes.Quiz
@{
    ViewData["Title"] = "Clone";
}
<div class="container mt-3">
    <div class="row">
        <div>
            Clone - @Model.Title
            <hr/>
            <form asp-action="Clone" method="post">
                <input type="hidden" name="quizId" value="@Model.Id" />
                <div class="form-group">
                    <label>Title</label>
                    <input name="title" type="text" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input name="description" type="text" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Order</label>
                    <input name="order" type="text" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Parent</label>
                    <select name="folderId" class="form-control" asp-items="ViewBag.FolderList">
                        <option value="">No folder</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Clone" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
