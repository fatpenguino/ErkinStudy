@model IEnumerable<ErkinStudy.Domain.Entities.Quiz.Question>

@{
    ViewData["Title"] = "Index";
}

<h1>Questions</h1>
<a asp-controller="Quiz" asp-action="Index" class="btn btn-primary">Back</a>
<p>
    <a asp-action="Create" asp-route-quizId="@ViewBag.QuizId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
 @if(Model != null)
   @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
	            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-controller="Answer" asp-action="Index" asp-route-questionId="@item.Id">Answers</a>
            </td>
        </tr>
    }
    </tbody>
</table>
