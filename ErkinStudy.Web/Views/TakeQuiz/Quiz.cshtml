@model ErkinStudy.Domain.Entities.Quiz.Quiz

@{
    ViewData["Title"] = "Index";
}

<h1>@Model.Title</h1>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <ol type="1">
                @foreach (var question in Model.Questions) 
                {
                    <li>
                        @Html.DisplayFor(modelItem => question.Content)
                    </li>
                    <ol type="a">
                        @foreach( var ans in question.Answers)
                        {
                            <li>
                                @Html.RadioButton(question.Id.ToString(), ans.Id) @ans.Content;
                            </li>
                        }
                    </ol>
                }
            </ol>
        </div>
        <div class="form-group">
            <input type="submit" value="Тексеру" class="btn btn-primary" />
        </div>
    </div>
}
<form asp-action="Check">
    <div class="form-group">
        <ol type="1">
            @foreach (var question in Model.Questions) 
            {
                <li>
                    @Html.DisplayFor(modelItem => question.Content)
                </li>
                <ol type="a">
                    @foreach( var ans in question.Answers)
                    {
                        <li>
                            @Html.RadioButton(question.Id.ToString(), ans.Id) @ans.Content;
                        </li>
                    }
                </ol>
            }
        </ol>
    </div>
    <div class="form-group">
        <input type="submit" value="Тексеру" class="btn btn-primary" />
    </div>
</form>