@model ErkinStudy.Domain.Entities.Quizzes.Answer

<div class="row">
    <div class="col-8">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Content" class="col-form-label"></label>
            <textarea asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
    </div>
    <div class="col-4">
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsCorrect" />
                <label class="form-check-label" asp-for="IsCorrect"></label>
            </div>
        </div>
        <div class="form-group">
            <input asp-for="Id" type="hidden"  />
            <input asp-for="QuestionId" type="hidden" />
        </div>
    </div>
</div>